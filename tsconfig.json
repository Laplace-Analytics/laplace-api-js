{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*", "src/jest.setup.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "paths": {
    "@/*": ["src/*"]
  }
}